<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>FundhouseFx</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="5.0.13" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="5.0.13" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\resources\fundhouse_fx.db">
      <Link>Resources\fundhouse_fx.db</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="..\resources\openapi.yaml">
      <Link>Resources\openapi.yaml</Link>
    </Content>
    <Content Include=".docker\.Dockerignore" />
    <Content Include=".docker\Dockerfile" />
  </ItemGroup>

</Project>
